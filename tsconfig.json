{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "types": ["vitest/globals"],
        "noEmit": true,
        "target": "esnext",
        "module": "esnext",
        "lib": ["ESNext"],
        "moduleResolution": "bundler",
        "paths": {
            "@utils": ["src/utils"]
        },
        "strict": false
    },
    "include": [
        "src/**/*",
        "types/**/*",
        "tests/**/*"
    ]
}
